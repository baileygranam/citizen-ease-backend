{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "esModuleInterop": true,
    "outDir": "./build",
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "lib": ["ESNext", "DOM"],
    "types": ["node", "jest"],
    "baseUrl": ".",
    "paths": {
      "@models/*": ["src/models/*"],
      "@graphql/*": ["src/graphql/*"],
      "@test/*": ["src/__test__/*"],
    },
  },
  "exclude": ["node_modules", "build"],
  "include": ["src"]
}